<div>
    <div class="favSlider">
        <span><img src="arrowIcon.png" class="icon"> </span>
        <div>
            <h3 class="articleHeader">Saved Favs</h3>
            <div>
                {{#each articles}}
                    {{#if favourite}}
                <div class="eachArticle favArticles">
                    <img class="articleImg" src={{img}}>
                    <div class="nonImg">
                        <a href="{{link}}" target="_blank"> <h3 class="articleHeader">{{title}}</h3></a>
                        <span><img src="fullHeartIcon.png" class="icon favIcon" id="{{id}}" data-state="{{favourite}}"></span>
                        <span><img src="commentIcon.png" class="icon commentIcon" id="{{id}}"></span>
                    </div>
                </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

    <div>
    {{#each articles}}
        {{#unless favourite}}
    <div class="eachArticle">
        <img class="articleImg" src={{img}}>
        <div class="nonImg">
            <a href="{{link}}" target="_blank"> <h3 class="articleHeader">{{title}}</h3></a>
            <span><img src="emptyHeartIcon.png" class="icon favIcon" id="{{id}}" data-state="{{favourite}}"></span>
            <span><img src="commentIcon.png" class="icon commentIcon" id="{{id}}"></span>
        </div>
    </div>
    {{/unless}}
    {{/each}}

    </div>
</div>

