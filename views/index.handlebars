<div>
    <div class="favSlider">
        <span><img src="arrowIcon.png" class="icon collapseIcon"> </span>
        <div class="favBox" visible-status="show">
            <h3 class="articleHeader">Saved Favs</h3>
            <div>
                {{#each articles}}
                    {{#if favourite}}
                <div class="eachArticle favArticles">
                    <img class="articleImg" src={{img}}>
                    <div class="nonImg">
                        <a href="{{link}}" target="_blank"> <h3 class="articleHeader">{{title}}</h3></a>
                        <span><img src="fullHeartIcon.png" class="icon favIcon" id="{{id}}" data-state="{{favourite}}" title="Remove from favs"></span>
                        <span><img src="commentIcon.png" class="icon commentIcon" id="{{id}}"></span>
                    </div>
                </div>
                    {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

    <div>
        {{#each articles}}
            {{#unless favourite}}
        <div class="eachArticle">
            <img class="articleImg" src={{img}}>
            <div class="nonImg">
                <a href="{{link}}" target="_blank"> <h3 class="articleHeader">{{title}}</h3></a>
                <span><img src="emptyHeartIcon.png" class="icon favIcon" id="{{id}}" data-state="{{favourite}}" title="Fav this article"></span>
                <span><img src="commentIcon.png" class="icon commentIcon" id="{{id}}"></span>
            </div>
        </div>
            {{/unless}}
        {{/each}}
    </div>

    <div class="commentModal modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Comments</h2>
            <div class="currentComments"></div>
            <form class="commentForm">
                <label for="nameLabel">Name</label>
                <input type="text" id="commenterName">
                <label for="commentLabel">Comment</label>
                <textarea id="commentText" placeholder="Add your comment here..."></textarea>
                <input type="submit" value="Submit">
            </form>
        </div>
    </div>
</div>

